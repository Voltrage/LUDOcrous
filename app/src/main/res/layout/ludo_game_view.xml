<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_gui_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <edu_up_cs301.ludo.SquaredFrame
        android:id="@+id/SquareBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:gravity="center">

        <edu_up_cs301.ludo.LudoSurfaceView
            android:id="@+id/board_canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:fitsSystemWindows="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

    </edu_up_cs301.ludo.SquaredFrame>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="bottom"
        android:orientation="horizontal" android:layout_alignParentBottom="true" android:layout_alignParentStart="true">


        <Button android:id="@+id/button_Roll" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="Roll Dice" android:textSize="40sp" />
    </LinearLayout>

</RelativeLayout>
